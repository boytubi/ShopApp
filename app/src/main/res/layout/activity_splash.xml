<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/splash_bg"
    tools:context=".view.splash.SplashActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">
  <com.airbnb.lottie.LottieAnimationView
      android:layout_width="250dp"
      android:layout_height="250dp"
      android:id="@+id/lottieAnimationView"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginTop="30dp"
      app:lottie_fileName="servishero_loading.json"/>
    <TextView
      android:id="@+id/textWelcome"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="296dp"
      android:textSize="26sp"
      android:textColor="#FFFFFF"
      android:text="Welcome To ShopApp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Smarter Shopping, Better Living"
      android:textColor="#FFFFFF"
      android:textSize="16sp"
      app:layout_constraintTop_toTopOf="@+id/textWelcome"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.495"
      android:layout_marginRight="32dp"
      android:layout_marginLeft="32dp"
      android:layout_marginTop="30dp"
      android:textAlignment="center"
      />
   <Button
       android:id="@+id/buttonGetStarted"
       android:layout_width="245dp"
       android:layout_height="45dp"
       android:background="@drawable/bg_button_started"
       android:text="Get Started"
       android:layout_marginBottom="96dp"
       android:textSize="18sp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>